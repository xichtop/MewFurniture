<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbarfrmHoaDon"
        app:title="Hóa Đơn"
        android:background="#4665ce"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/txtHoaDon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/hoaDon"
        android:textSize="40dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#c58d40"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtTimKiem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/timKiem"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#c58d40"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TÌM KIẾM"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lvMaHD"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/maHD"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/lvMaKH"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/maKH"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/lvNgayHD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/ngayHD"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/lvTrangThai"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="@string/trangThai"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:gravity="center_horizontal"
            />

    </LinearLayout>
    <!--<ListView
        android:id="@+id/lvHoaDon"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"
        />-->
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/lvHoaDon"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <!--<Button
            android:id="@+id/btnDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/danhSach"
            app:backgroundTint="#c58d40"
            />-->
        <Button
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/them"
            android:textColor="#fff"
            app:backgroundTint="#c58d40" />
        <!--<Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xoa"
            app:backgroundTint="#c58d40"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/btnSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sua"
            app:backgroundTint="#c58d40"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnTroVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/troVe"
            app:backgroundTint="#c58d40"
            android:textColor="#fff"
            />
    </LinearLayout>

</LinearLayout>