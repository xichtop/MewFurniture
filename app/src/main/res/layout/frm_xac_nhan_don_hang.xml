<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".user.Thongtinkhachhang">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_infor_cus"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:textSize="30sp"
            android:text="@string/xacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maXacNhan"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/edtOTP1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtOTP2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtOTP3"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtOTP4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtOTP5"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtOTP6"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="70dp"
                android:background="#c58d40"
                android:textColor="#fff"
                android:textSize="15sp"
                android:padding="10dp"
                android:id="@+id/btnXacNhan"
                android:text="Xác nhận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:background="#c58d40"
                android:textColor="#fff"
                android:textSize="15sp"
                android:padding="10dp"
                android:id="@+id/btnTroVe"
                android:text="Trở về"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>