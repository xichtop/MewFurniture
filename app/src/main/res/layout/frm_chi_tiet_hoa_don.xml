<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbarfrmChiTietHoaDon"
        app:title="Chi Tiết Hóa Đơn"
        android:background="#4665ce"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/txtCTHD"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/chiTietHoaDon"
        android:textSize="40dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#c58d40"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtTimKiem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/timKiem"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#c58d40"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TÌM KIẾM"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/maHD"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/maSP"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/soLuong"
            android:textStyle="bold"
            android:textColor="#c58d40"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <!--<ListView
        android:id="@+id/lvCTHD"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"
        />-->
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/lvCTHD"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/them"
            app:backgroundTint="#c58d40"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnTroVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/troVe"
            app:backgroundTint="#c58d40"
            android:textColor="#fff"
            />
    </LinearLayout>

</LinearLayout>