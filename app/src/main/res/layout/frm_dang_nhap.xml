    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/furniturelogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sdt"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/edtSDT"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/sdt"
            android:textColorHint="#B5B0B0"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/ic_action_sdt"
            android:background="#11000000"
            android:textSize="16dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/matKhau"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="@string/matKhau"
            android:textColorHint="#B5B0B0"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:background="#11000000"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/btnDangNhap"
                android:layout_width="250dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#c58d40">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

<!--            <Button-->
<!--                android:id="@+id/btnDangNhap"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/dangNhap"-->
<!--                app:backgroundTint="#c58d40"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:textColor="#fff"-->
<!--                />-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dangKyNgay"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/btnDangKy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dangKy"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="#c58d40"
                />
<!--            <Button-->
<!--                android:id="@+id/btnDangKy"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/dangKy"-->
<!--                app:backgroundTint="#c58d40"-->
<!--                android:textColor="#fff"-->
<!--                />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>